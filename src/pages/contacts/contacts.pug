					p.contacts-page__ad--text Коннова Юлия
					+marker({'icon': 'mail', 'href': 'mailto:konnova.y@gmail.com', 'text': 'konnova.y@gmail.com'})
					+marker({'icon': 'phone', 'href': 'tel:+79818968486', 'text': '+7 (981) 896-84-86'})